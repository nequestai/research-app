<MySwiper@MDSwiperItem>

MDScreen:
    name: "MPFaceMesh"

    canvas.before:
        Color:
            rgba: (227/255, 238/255, 229/255, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    MDBoxLayout:
        orientation: 'vertical'
        padding: 30
        MDToolbar:
            title: 'NeuroVA FaceMesh'
            md_bg_color: (39/255, 122/255, 81/255, 1)
            specific_text_color: [1, 1, 1, 1]
            left_action_items: [["backburger", lambda x: app.MP.close_test()]]
            elevation: 10

        MDBoxLayout:
            id: MPLayout
            orientation: 'vertical'
            # left, right,
            padding: [0, 10, 0, 0]
            spacing: 15

            MDLabel:
                id: label1
                text: "START"
                size_hint: (1, 0.15)
                halign: 'center'
                font_style: "H2"
                font_size: self.width/17

            # Live feed
            MDRectangleFlatButton:
                size_hint: None, None
                width: root.width*0.8
                height: root.height*0.4
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                Image:
                    id: web_feed
                    allow_stretch: True
                    on_touch_down: app.MP.change_texture(Swiper.get_current_index(), root), app.MP.load_frame(id, root)
                    source: '../Kivy Logo Images/TestLiveStream.png'
                    texture:

            MDSwiper:
                id: Swiper
                # size_hint: 1, 1
                size_hint_y: None
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                height: dp(200)
                width_mult: 7
                on_swipe:
                    app.MP.change_texture(Swiper.get_current_index(), root)

                MySwiper:
                    FitImage:
                        id: image1
                        allow_stretch: True
                        source: '../Kivy Logo Images/4.png'
                        radius: [30,]

                MySwiper:
                    FitImage:
                        id: image2
                        source: '../Kivy Logo Images/5.png'
                        radius: [30,]
                MySwiper:
                    FitImage:
                        id: image3
                        source: '../Kivy Logo Images/6.png'
                        radius: [30,]
                MySwiper:
                    FitImage:
                        id: image4
                        source: '../Kivy Logo Images/7.png'
                        radius: [30,]


            MDLabel:
                id: label2
                text: "Swipe for Next Capture"
                size_hint: (1, 0.15)
                halign: 'center'
                font_style: "H2"
                font_size: self.width/17

            FloatLayout:
                spacing: 20
                padding: 20

                MDIconButton:
                    md_bg_color: (107/255, 187/255, 142/255, 1)
                    icon: "camera"
                    ripple_scale: 0
                    pos_hint: {'center_x': 0.5, 'center_y': 0.75}
                    user_font_size: "35sp"
                    theme_text_color: "Custom"
                    text_color: (255/255, 255/255, 255/255, 1)
                    on_release:
                        app.MP.take_picture(Swiper.get_current_index())

                MDRectangleFlatIconButton:
                    icon: "dots-hexagon"
                    text: "COMPUTE"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.25}
                    user_font_size: "45sp"
                    theme_text_color: "Custom"
                    theme_icon_color: "Custom"
                    line_color: (39/255, 122/255, 81/255, 1)
                    text_color: (39/255, 122/255, 81/255, 1)
                    icon_color: (39/255, 122/255, 81/255, 1)
                    on_release:
                        app.MP.MP_Method()


                MDIconButton:
                    #md_bg_color: (1, 1, 1, 1)
                    icon: 'clipboard-check-outline'
                    user_font_size: "35sp"
                    pos_hint: {'center_x': 0.85, 'center_y': 0.2}
                    theme_text_color: "Custom"
                    text_color: (43/255, 87/255, 47/255, 1)
                    on_release:
                        root.manager.current = "Results"

                MDIconButton:
                    #md_bg_color: (1, 1, 1, 1)
                    icon: 'restart'
                    user_font_size: "35sp"
                    pos_hint: {'center_x': 0.15, 'center_y': 0.2}
                    theme_text_color: "Custom"
                    text_color: (43/255, 87/255, 47/255, 1)
                    on_release:
                        app.MP.close_test()
                        app.MP.refresh_test(root)
                        app.MP.delete_temps()

