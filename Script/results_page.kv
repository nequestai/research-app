<MySwiper@MDSwiperItem>

MDScreen:
    name: "Results"

    canvas.before:
        Color:
            rgba: (227/255, 238/255, 229/255, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    MDBoxLayout:
        orientation: 'vertical'
        padding: 15

        MDToolbar:
            title: 'Results'
            md_bg_color: (39/255, 122/255, 81/255, 1)
            specific_text_color: [1, 1, 1, 1]
            left_action_items: [["backburger", lambda x: app.go_back_screen_once("MPFaceMesh")]]

        MDBoxLayout:
            orientation: 'vertical'
            # left, right,
            padding: [0, 10, 0, 0]
            spacing: 15

            MDLabel:
                id: label1
                text: "Landmarks Results"
                size_hint: (1, 0.15)
                halign: 'center'
                font_style: "H2"
                font_size: self.width/17

            MDRectangleFlatIconButton:
                icon: "dots-hexagon"
                text: "LOAD"
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                user_font_size: "45sp"
                theme_text_color: "Custom"
                theme_icon_color: "Custom"
                line_color: (39/255, 122/255, 81/255, 1)
                text_color: (39/255, 122/255, 81/255, 1)
                icon_color: (39/255, 122/255, 81/255, 1)
                on_release:
                    app.MP.show_mp_results(root)

            MDBoxLayout:
                id: MPResults
                orientation: 'vertical'
                padding: [20, 0, 0, 20]
                spacing: 5
                md_bg_color: (227/255, 238/255, 229/255, 1)

                MDSwiper:
                    id: Swiper
                    # size_hint: 1, 1
                    size_hint_y: None
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    height: dp(300)
                    width_mult: 7
                    on_swipe:
                        app.MP.change_texture(Swiper.get_current_index(), root)

                    MySwiper:
                        FitImage:
                            id: mp_image1
                            allow_stretch: True
                            source: './Kivy Logo Images/4.png'
                            radius: [30,]

                    MySwiper:
                        FitImage:
                            id: mp_image2
                            source: './Kivy Logo Images/5.png'
                            radius: [30,]

                    MySwiper:
                        FitImage:
                            id: mp_image3
                            allow_stretch: True
                            source: './Kivy Logo Images/6.png'
                            radius: [30,]

                    MySwiper:
                        FitImage:
                            id: mp_image4
                            source: './Kivy Logo Images/7.png'
                            radius: [30,]


            MDFloatLayout:
                md_bg_color: 1, 1, 1, 1
                orientation: 'vertical'

                MDLabel:
                    text: "Geometric Computation Model:"
                    size_hint: (1, 0.15)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.8}
                    halign: 'center'
                    font_style: "H2"
                    font_size: self.width/17
                MDLabel:
                    id: LeftAlt
                    #text: "Avg. Left Alteration:"
                    pos_hint: {'center_x': 0.6, 'center_y': 0.6}
                    size_hint: (1, 0.15)
                    font_style: "H2"
                    font_size: self.width/25
                MDLabel:
                    id: RightAlt
                    #text: "Avg. Right Alteration:"
                    pos_hint: {'center_x': 0.6, 'center_y': 0.5}
                    size_hint: (1, 0.15)
                    font_style: "H2"
                    font_size: self.width/25
                MDLabel:
                    id: nrValue
                    #text: "nR-Value:"
                    pos_hint: {'center_x': 0.68, 'center_y': 0.4}
                    size_hint: (1, 0.15)
                    font_style: "H2"
                    font_size: self.width/25
                MDLabel:
                    id: nu_rValue
                    #text: "nu_r-Value:"
                    pos_hint: {'center_x': 0.66, 'center_y': 0.3}
                    size_hint: (1, 0.15)
                    font_style: "H2"
                    font_size: self.width/25


